{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fe:",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}",
                "/I", "C:\\SDL2\\SDL2-2.30.7\\include",
                "/link",
                "C:\\SDL2\\SDL2-2.30.7\\lib\\x64\\SDL2.lib",
                "C:\\SDL2\\SDL2-2.30.7\\lib\\x64\\SDL2main.lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}